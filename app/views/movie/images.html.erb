<%= render :partial => 'head' %>
<h2>Images</h2>
<% for image_type in @images.keys.reverse 
   next if @images[image_type].blank? %>
  <div>
  <h3><%= image_type %></h3>
  <% for image in @images[image_type] %>
    <span>
      <%= link_to image_tag(@movie.tmdb_image_url(image["file_path"], image_type.singularize, "medium")),
                  @movie.tmdb_image_url(image["file_path"], image_type.singularize, "original"),
		  :target => "_blank" %>
    </span>
  <% end %>
  </div>
<% end %>