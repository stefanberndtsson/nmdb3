<% for connection_type in @connections.keys.sort_by {|x| x.sort_order } %>
<ul class="pageitem">
  <li class="header">&nbsp;&nbsp;<%= connection_type.connection_type %></li>
  <% for conn in @connections[connection_type].sort_by {|x| x.linked_movie.full_year || "zzzzzzzzzzz" } %>
     <li class="menu textbox">
      <a href="<%= url_for(:action => :movie, :id => conn.linked_movie.id) %>">
       <span class="name"><%= conn.linked_movie.display %></span>
       <% if conn.imdb_extra_info %>
       <span class="multiline comment"><%= conn.imdb_extra_info.html_safe %></span>
       <% end %>
       <span class="topline_arrow arrow"></span>
      </a>
     </li>
  <% end %>
</ul>
<% end %>