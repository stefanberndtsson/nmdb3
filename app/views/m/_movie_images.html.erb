<% for image_type in @images.keys.reverse 
   next if @images[image_type].blank? %>
<ul class="pageitem">
  <li class="textbox">
   <span class="header"><%= image_type %></span>
  <% for image in @images[image_type] %>
    <div style="display: inline-block; padding-bottom: 3px;">
      <%= link_to image_tag(@movie.tmdb_image_url(image["file_path"], image_type.singularize, "thumb"), :title => tmdb_image_info(image)),
                  @movie.tmdb_image_url(image["file_path"], image_type.singularize, "original"),
		  :target => "_blank" %>
    </div>
  <% end %>
  </li>
</ul>
<% end %>