<% for title in @movie.soundtrack_titles.sort_by {|x| x.sort_order} %>
<ul class="pageitem">
  <li class="textbox">
    <span class="header"><%= title.title %></span>
    <% for data in title.soundtrack_title_data.sort_by {|x| x.sort_order} %>
      <%= decode_links(data.value, :mobile) %><br/>
    <% end %>
  </li>
</ul>
<% end %>