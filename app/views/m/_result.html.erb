<% for result in @results[:movies][0..7] %>
<a class="item" href="<%= url_for(:action => :movie, :id => result.id) %>">
  <div class="result-image">
  <% if result.image_url(current_user, true) %>
    <%= image_tag result.image_url(current_user, true) %>
  <% end %>
  </div>
  <div class="result-data">
    <div class="result-title"><%= result.display %></div>
  </div>
</div>
<% end %>